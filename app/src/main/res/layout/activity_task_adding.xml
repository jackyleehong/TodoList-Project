<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="example.com.todolist.TaskAddingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task"
        android:id="@+id/txtTask"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Set task here...."
      android:textStyle="italic"
      android:layout_below="@+id/txtTask"
      android:id="@+id/edtxtTask"
      />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_below="@+id/edtxtTask"
        android:id="@+id/txtTime"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set time here..."
        android:textStyle="italic"
        android:layout_below="@+id/txtTime"
        android:id="@+id/edtxtTime"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_below="@+id/edtxtTime"
        android:id="@+id/txtDate"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set time here..."
        android:textStyle="italic"
        android:layout_below="@+id/txtDate"
        android:id="@+id/edtxtDate"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:onClick="addTask"
        android:id="@+id/saveBtn"/>

</RelativeLayout>
