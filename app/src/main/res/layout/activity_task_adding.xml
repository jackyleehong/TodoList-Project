<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="example.com.todolist.TaskAddingActivity"
    android:background="#FFE0B2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task"
        android:id="@+id/txtTask"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Set task here...."
      android:textStyle="italic"
      android:layout_below="@+id/txtTask"
      android:id="@+id/edtxtTask"
      />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_below="@+id/edtxtTask"
        android:id="@+id/txtDescription"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set task description here...."
        android:textStyle="italic"
        android:layout_below="@+id/txtDescription"
        android:id="@+id/edtxtDescription"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_below="@+id/edtxtDescription"
        android:id="@+id/txtTime"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set time here..."
        android:textStyle="italic"
        android:layout_below="@+id/txtTime"
        android:id="@+id/edtxtTime"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_below="@+id/edtxtTime"
        android:id="@+id/txtDate"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set date here..."
        android:textStyle="italic"
        android:layout_below="@+id/txtDate"
        android:id="@+id/edtxtDate"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtxtDate"
        android:text="Reminder"
        android:id="@+id/reminder"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set reminder here..."
        android:textStyle="italic"
        android:editable="false"
        android:layout_below="@+id/reminder"
        android:id="@+id/reminderTime"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Reminder"
        android:checked="false"
        android:id="@+id/reminderChk"
        android:layout_alignRight="@+id/reminderTime"
        android:layout_below="@id/reminderTime"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:onClick="addTask"
        android:id="@+id/saveBtn"/>

</RelativeLayout>
